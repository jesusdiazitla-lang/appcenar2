<div class="container py-4">
  <div class="row">
    <!-- Selección de Dirección -->
    <div class="col-lg-7">
      <div class="card shadow">
        <div class="card-header bg-success text-white">
          <h5 class="mb-0"><i class="bi bi-geo-alt"></i> Selecciona tu dirección de entrega</h5>
        </div>
        <div class="card-body">
          {{#if direcciones.length}}
            <form action="/cliente/crear-pedido" method="POST" id="form-pedido">
              <input type="hidden" name="comercioId" value="{{comercio._id}}">
              <input type="hidden" name="productosIds" value="{{productosIds}}">
              
              {{#each direcciones}}
                <div class="form-check card mb-3 direccion-card">
                  <div class="card-body">
                    <input 
                      class="form-check-input" 
                      type="radio" 
                      name="direccionId" 
                      id="direccion{{@index}}" 
                      value="{{this._id}}"
                      required
                    >
                    <label class="form-check-label w-100" for="direccion{{@index}}">
                      <div class="d-flex justify-content-between align-items-start">
                        <div>
                          <h6 class="fw-bold mb-1">{{this.nombre}}</h6>
                          <p class="text-muted mb-0">{{this.descripcion}}</p>
                        </div>
                        <i class="bi bi-geo-alt-fill text-success fs-4"></i>
                      </div>
                    </label>
                  </div>
                </div>
              {{/each}}

              <div class="d-grid gap-2 mt-4">
                <a href="/cliente/direcciones/crear" class="btn btn-outline-success">
                  <i class="bi bi-plus-circle"></i> Agregar Nueva Dirección
                </a>
              </div>
            </form>
          {{else}}
            <div class="alert alert-warning text-center">
              <i class="bi bi-geo-alt fs-1 d-block mb-3"></i>
              <h5>No tienes direcciones registradas</h5>
              <p>Debes agregar al menos una dirección para realizar tu pedido.</p>
              <a href="/cliente/direcciones/crear" class="btn btn-success mt-2">
                <i class="bi bi-plus-circle"></i> Agregar Dirección
              </a>
            </div>
          {{/if}}
        </div>
      </div>
    </div>

    <!-- Resumen del Pedido -->
    <div class="col-lg-5">
      <div class="card shadow sticky-top" style="top: 20px;">
        <div class="card-header bg-primary text-white">
          <h5 class="mb-0"><i class="bi bi-receipt"></i> Resumen del Pedido</h5>
        </div>
        <div class="card-body">
          <!-- Info del Comercio -->
          <div class="text-center mb-3 pb-3 border-bottom">
            {{#if comercio.logoComercio}}
              <img src="{{comercio.logoComercio}}" alt="{{comercio.nombreComercio}}" style="max-height: 50px;" class="mb-2">
            {{/if}}
            <h6 class="fw-bold mb-0">{{comercio.nombreComercio}}</h6>
          </div>

          <!-- Productos -->
          <h6 class="fw-bold mb-3">Productos:</h6>
          {{#each productos}}
            <div class="d-flex justify-content-between mb-2">
              <span>{{this.nombre}}</span>
              <span class="text-success fw-bold">{{formatCurrency this.precio}}</span>
            </div>
          {{/each}}

          <hr>

          <!-- Totales -->
          <div class="d-flex justify-content-between mb-2">
            <span>Subtotal:</span>
            <strong>{{formatCurrency subtotal}}</strong>
          </div>
          <div class="d-flex justify-content-between mb-2">
            <span>ITBIS ({{itbis}}%):</span>
            <strong>{{formatCurrency valorItbis}}</strong>
          </div>
          <hr>
          <div class="d-flex justify-content-between">
            <strong class="fs-5">Total:</strong>
            <strong class="fs-5 text-success">{{formatCurrency total}}</strong>
          </div>
        </div>
        <div class="card-footer">
          <div class="d-grid gap-2">
            <button type="button" onclick="history.back()" class="btn btn-outline-secondary">
              <i class="bi bi-arrow-left"></i> Volver
            </button>
            {{#if direcciones.length}}
              <button type="submit" form="form-pedido" class="btn btn-success btn-lg">
                <i class="bi bi-check-circle"></i> Realizar Pedido
              </button>
            {{/if}}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>